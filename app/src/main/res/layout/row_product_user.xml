<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/no_photo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/productIconIv">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/discountNoteTv"
                    android:layout_alignParentEnd="true"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect05"
                    android:padding="5dp"
                    android:text="10% OFF"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorGreen"/>

                <TextView
                    android:id="@+id/discountedPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10"
                    android:inputType="numberDecimal"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorGray02"
                    android:layout_toStartOf="@id/originalPriceTv"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:layout_toStartOf="@id/discountNoteTv"
                    android:id="@+id/originalPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorGray02"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>

        <TextView
            android:id="@+id/titleTv"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/descriptionTv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Description"
                android:textStyle="bold"
                android:minLines="2"
                android:maxLines="2"
                android:layout_below="@+id/titleTv"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/addToCartTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Add To Cart"
                android:drawableStart="@drawable/ic_cart_gray"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_below="@+id/descriptionTv"
                android:textColor="@color/colorPrimaryDark"/>



        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>